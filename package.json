{
  "name": "electron-extension-installer",
  "version": "0.0.0-development",
  "license": "MIT",
  "author": "Jonluca DeCaro <electronextension@jonlu.ca>",
  "description": "Install any extension into electron",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "README.md"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "keywords": [
    "electron",
    "devtools",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonluca/electron-extension-installer.git"
  },
  "bugs": {
    "url": "https://github.com/jonluca/electron-extension-installer/issues"
  },
  "homepage": "https://github.com/jonluca/electron-extension-installer",
  "scripts": {
    "prepublishOnly": "yarn build",
    "lint": "eslint src",
    "build": "rimraf dist/* && tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|har||json|css|md)\""
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "peerDependencies": {
    "electron": ">=36.0.0"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "@types/eslint": "9.6.1",
    "@types/node": "^24.0.15",
    "electron": ">=36.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/eslint-plugin-tslint": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "**/*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
