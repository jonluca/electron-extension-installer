{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
